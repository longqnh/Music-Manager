<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:Controls="clr-namespace:MusicManager.Controls" x:Class="MusicManager.SearchWindow"
        Title="SearchWindow" Height="500" Width="714" Background="Black">
    <Grid Margin="0,0,-8,0">
        <Grid.Resources>
            <Style x:Key="labelStyle" TargetType="{x:Type Label}">
                <Setter Property="Foreground" Value="Green"/>
            </Style>
        </Grid.Resources>
        <Label x:Name="Label2" Content="TÌM KIẾM THÔNG TIN" HorizontalAlignment="Left" VerticalAlignment="Top" Height="51" Width="692" Background="Black" FontSize="42" FontFamily="Times New Roman" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="LightGreen"/>
        <Label x:Name="Label1" Content="Tìm kiếm theo" HorizontalAlignment="Left" Margin="10,60,0,0" Background="Black" Width="125" VerticalAlignment="Top" Style="{StaticResource labelStyle}" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="Label3" Content="Nội dung tìm kiếm" HorizontalAlignment="Left" Margin="340,60,0,0" VerticalAlignment="Top" Width="154" Background="Black" Foreground="Green" FontSize="16" FontWeight="Bold"/>
        <Controls:Search HorizontalAlignment="Left" VerticalAlignment="Top" Height="410" Width="702" Margin="0,60,0,0"/>

    </Grid>
</Window>
