<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MusicManager.Controls" x:Class="MusicManager.MainWindow"
        Title="MusicManager" Height="588" Width="981">
    <Grid>
        <Controls:SongListView x:Name="SongList" HorizontalAlignment="Left" VerticalAlignment="Top" Loaded="SongList_Loaded"/>
        <Border x:Name="BorderNo1" BorderBrush="#FF837C83" BorderThickness="1" HorizontalAlignment="Left" Height="506" Margin="341,20,0,0" VerticalAlignment="Top"/>
        <Controls:PlaylistView x:Name="PlayList" HorizontalAlignment="Left" Margin="342,0,0,0" VerticalAlignment="Top" Height="554"/>
        <Border x:Name="BorderNo2" BorderBrush="#FF837C83" BorderThickness="1" HorizontalAlignment="Left" Height="506" Margin="682,20,0,0" VerticalAlignment="Top"/>
        <Controls:TrackInfoView x:Name="TrackInfo" HorizontalAlignment="Left" Margin="683,0,0,0" VerticalAlignment="Top"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="199,10,0,0" VerticalAlignment="Top" Width="66" Click="Button_Click"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="128,10,0,0" VerticalAlignment="Top" Width="66" Click="Button_Click_1"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="270,10,0,0" VerticalAlignment="Top" Width="66" Click="Button_Click_2"/>
    </Grid>
</Window>
